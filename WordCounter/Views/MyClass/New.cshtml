@{
  Layout = "_Layout";
}

<div class = "form">
  <h1>Word Counter!</h1>
  <form action="/result" method="post">
    <label for="sentence">Please enter a sentence</label>
    <input id="sentence" name="sentence" type="text" required>
    <br>
    <label for="word">Please enter a word</label>
    <input id="word" name="word" type="text" required>
    <br>
    <button type="submit" class="btn btn-warning">Submit</button>
  </form>
</div>
